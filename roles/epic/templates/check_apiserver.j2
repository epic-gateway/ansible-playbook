#!/bin/sh

errorExit() {
    echo "*** $*" 1>&2
    exit 1
}

curl --silent --max-time 2 --insecure https://localhost:6443/ -o /dev/null || errorExit "Error GET https://localhost:6443/"
if ip addr | grep -q {{ k8s_cluster_vip }}; then
    curl --silent --max-time 2 --insecure https://{{ k8s_cluster_vip }}:8443/ -o /dev/null || errorExit "Error GET https://{{ k8s_cluster_vip }}:8443/"
fi
