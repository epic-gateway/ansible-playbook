apiVersion: "k8s.cni.cncf.io/v1"
kind: NetworkAttachmentDefinition
metadata:
  name: {{ bridge_name }}
  namespace: multus
spec:
  config: '{
      "cniVersion": "0.3.1",
      "name": "{{ bridge_name }}",
      "plugins": [
        {  
          "type": "bridge",
          "bridge": "{{ bridge_name }}",
          "isGateway": true,
          "ipam": {
            "type": "host-local",
            "ranges": [
              [
                {
                  "subnet": "{{ subnet }}",
                  "rangeStart": "{{ rangeStart }}",
                  "rangeEnd": "{{ rangeEnd }}",
                  "gateway": "{{ gateway }}"
                }
              ]
            ],
            "routes": [
              { "dst": "0.0.0.0/0" }
            ]
          }
        }
      ]
    }'