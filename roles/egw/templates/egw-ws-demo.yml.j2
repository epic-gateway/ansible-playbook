---
apiVersion: v1
kind: ServiceAccount
metadata:
  labels:
    app: egw
  name: egw-web-service
  namespace: acnodal
---
apiVersion: rbac.authorization.k8s.io/v1
kind: ClusterRole
metadata:
  labels:
    app: egw
  name: egw-web-service
rules:
- apiGroups:
  - egw.acnodal.io
  resources:
  - accounts
  - servicegroups
  - loadbalancers
  verbs:
  - get
  - list
  - watch
- apiGroups:
  - egw.acnodal.io
  resources:
  - loadbalancers
  verbs:
  - create
  - update
---
apiVersion: rbac.authorization.k8s.io/v1
kind: ClusterRoleBinding
metadata:
  labels:
    app: egw
  name: egw-web-service
roleRef:
  apiGroup: rbac.authorization.k8s.io
  kind: ClusterRole
  name: egw-web-service
subjects:
- kind: ServiceAccount
  name: egw-web-service
  namespace: acnodal
---
apiVersion: apps/v1
kind: Deployment
metadata:
  labels:
    app: egw
    component: web-service
  name: web-service
  namespace: acnodal
spec:
  selector:
    matchLabels:
      app: egw
      component: web-service
  template:
    metadata:
      labels:
        app: egw
        component: web-service
    spec:
      containers:
      - name: web-service
        image: registry.gitlab.com/acnodal/egw-web-service/web-service:demo202010060939
        imagePullPolicy: Always
        ports:
        - containerPort: 8080
        - containerPort: 18000
        securityContext:
          allowPrivilegeEscalation: true
          readOnlyRootFilesystem: true
        env:
        - name: DATABASE_URL
          value: postgresql://{{ postgres_ip }}:5432/egw
        - name: PGUSER
          valueFrom:
            secretKeyRef:
              name: egw-db
              key: username
        - name: PGPASSWORD
          valueFrom:
            secretKeyRef:
              name: egw-db
              key: password
      imagePullSecrets:
      - name: gitlab
      serviceAccountName: egw-web-service
      terminationGracePeriodSeconds: 0
---
kind: Service
apiVersion: v1
metadata:
  name: web-service
  namespace: acnodal
spec:
  type: NodePort
  ports:
  - port: 8080
    nodePort: 30080
    name: ws
  - port: 18000
    nodePort: 30081
    name: xds
  selector:
    app: egw
    component: web-service
